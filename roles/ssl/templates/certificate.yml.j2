apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ generated_name }}-wildcard-certificate
  namespace: openshift-ingress
spec:
  dnsNames:
    - '*.apps.{{ generated_name }}.partner-lab.rhecoeng.com'
  duration: 2160h0m0s
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: letsencrypt
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  renewBefore: 180h0m0s
  secretName: {{ generated_name }}-wildcard-certificate
  subject:
    countries:
      - US
    localities:
      - Raleigh
    organizations:
      - Ecosystem Experience Engineering
    postalCodes:
      - '27601'
    provinces:
      - North Carolina
    streetAddresses:
      - 100 E Davie St
  usages:
    - any